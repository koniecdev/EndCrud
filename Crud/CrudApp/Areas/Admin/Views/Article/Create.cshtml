@model Crud.Shared.Articles.Queries.GetCategoriesVm

@{
    AdminHeaderModel headerModel = new("Create new article", new(){new("/Admin/Article",SD.GoBackTo + "Articles")});
}
<partial name="_AdminHeaderPartial" model="@headerModel">
<form method="post">
    <input type="text" asp-for="@Model.Article.Header">
    <select asp-for="@Model.Article.CategoryId" asp-items="@Model.Categories.ToSelectListItem(1)"></select>
    @Html.TextAreaFor(m => m.Article.Content)
    <input type="hidden" asp-for="@Model.Article.ThumbnailId">
    <input type="hidden" name="galleryPics" id="galleryPics">
    <input type="submit">
</form>
<button class="LibraryThumbnailSelect">Select thumbnail</button>
<button class="LibraryGallerySelect">Add pictures to gallery</button>
<partial name="_AdminLibraryPartial" model="@(new AdminLibraryModel(0))">
<partial name="_AdminLibraryPartial" model="@(new AdminLibraryModel(1))">
@section Scripts{
    <script>
    $(document).ready(function(){
        // Set the cookie
        var expire = new Date();
        expire.setTime(expire.getTime() + (1 * 24 * 60 * 60 * 1000)); // expires in one day
        document.cookie = "access_token=@ViewBag.access_token; expires=" + expire.toUTCString() + "; path=/";
    });
    </script>
    <script src="~/js/tinymce.js"></script>
    <script src="~/js/library.js"></script>
}