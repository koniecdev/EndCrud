@model Crud.Shared.Categories.Queries.GetCategoryVm

@{
    AdminHeaderModel headerModel = new("Update existing category", new(){new("/Admin/Category",SD.GoBackTo + "Categories")});
}
<partial name="_AdminHeaderPartial" model="@headerModel">
<form method="post" class="iform">
    <div class="form_left">
        <input type="text" asp-for="@Model.Category.Name">
    </div>
    <div class="form_right">
        <input type="submit" value="Submit">
        <input type="hidden" asp-for="@Model.Category.Id">
    </div>
</form>